{
  "manifest_version": 2,
  "name": "nem2-wallet-browserextension",
  "version": "0.0.4",

  "description": "User friendly nem2 wallet",

  "icons": {
    "48": "icons/icon-48x48.png"
  },
  "browser_action": {
    "default_icon": "icons/icon-48x48.png",
    "default_title": "Opens MyExtension",
    "default_popup": "popup.html"
  },
  "protocol_handlers": [
    {
      "protocol": "web+nem",
      "name": "NEM Schema",
      "uriTemplate": "wallet.html/#/handler?transaction=%s"
    }
  ]
}